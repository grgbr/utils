	select UTILS_FD
	default y
	help
	  Build utils library POSIX IPC pipes support.

config UTILS_FILE
	bool "File"
	default y
	select UTILS_FD
	help
	  Build utils library POSIX filesystem file wrappers.

config UTILS_DIR
	bool "Directory"
	default y
	select UTILS_FD
	help
	  Build utils library POSIX filesystem directory wrappers.

config ETUX_FSTREE
	bool "Filesystem tree"
	default y
	select UTILS_DIR
	help
	  Build utils library with support for POSIX filesystem directory tree
	  iterator and scanner.

config UTILS_STR
	bool "String utilities"
	select UTILS_PROVIDES_LIBS
	default y
	help
	  Build utils library with string utilities support.

config UTILS_POLL
	bool "Polling"
	select UTILS_FD
	default y
	help
	  Build utils library with polling support.

menuconfig ETUX_NET
	bool "Network"
	default y
	help
	  Build eTux library with network support.

if ETUX_NET

config ETUX_NETDB
	bool "Network databases"
	select UTILS_PROVIDES_LIBS
	default y
	help
	  Build utils library with basic support for network databases.

config ETUX_NETIF
	bool "Network interface"
	select UTILS_PROVIDES_LIBS
	default y
